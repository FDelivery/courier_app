<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/circule"
    tools:context=".CourierProfile">


    <TextView
        android:id="@+id/PhoneMP"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:layout_width="352dp"
        android:layout_height="40dp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:hint="@string/PhoneMP"
        android:inputType="phone"
        android:padding="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.457" />

    <TextView
        android:id="@+id/TextMP"
        android:layout_width="297dp"
        android:layout_height="60dp"
        android:text="@string/textMP"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#de95e1"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.181" />

    <Button
        android:id="@+id/ChangeMP"
        android:layout_width="141dp"
        android:layout_height="59dp"
        android:background="@drawable/round_buttom"
        android:text="@string/ChangeMP"
        android:textColor="#ffffff"
        app:backgroundTint="#c956ce"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.955" />

    <Button
        android:id="@+id/PassChangeMP"
        android:layout_width="141dp"
        android:layout_height="59dp"
        android:background="@drawable/round_buttom"
        android:text="@string/PassChangeMP"
        android:textColor="#FFFFFF"
        app:backgroundTint="#c956ce"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.829"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.955" />

    <TextView
        android:id="@+id/EmailMP"
        style="@android:style/Widget.Holo.Light.TextView.SpinnerItem"
        android:layout_width="352dp"
        android:layout_height="40dp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:hint="@string/EmailMP"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.369" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="132dp"
        android:layout_height="106dp"
        app:srcCompat="@drawable/deliveryman"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>