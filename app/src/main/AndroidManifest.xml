<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.courier_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Courierapp"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.showChosenFromHistory"></activity>
        <activity android:name=".activities.activeDelivery" />
        <activity android:name=".activities.DetailsBank" />
        <activity android:name=".activities.EditMyProfile" />
        <activity android:name=".activities.ChangePassword" />
        <activity android:name=".activities.ChooseDelivery" />
        <activity android:name=".activities.CourierProfile" />
        <activity android:name=".activities.RegisterNewCourier" />
        <activity android:name=".activities.showChoosenDelivery" />
        <activity android:name=".activities.DeliveryHistory" />
        <activity android:name=".activities.CourierMain" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>